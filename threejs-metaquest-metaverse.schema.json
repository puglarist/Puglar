{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://puglar.local/schemas/threejs-metaquest-metaverse.schema.json",
  "title": "Three.js Meta Quest Metaverse Game Configuration",
  "description": "Schema for defining a Three.js-based metaverse experience targeting Meta Quest devices.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "project",
    "engine",
    "rendering",
    "xr",
    "world",
    "network",
    "avatars"
  ],
  "properties": {
    "project": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version", "entryScene"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+(-[0-9A-Za-z-.]+)?$" },
        "description": { "type": "string" },
        "entryScene": { "type": "string", "minLength": 1 },
        "contentPacks": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        }
      }
    },
    "engine": {
      "type": "object",
      "additionalProperties": false,
      "required": ["threeVersion", "physics", "tickRate"],
      "properties": {
        "threeVersion": { "type": "string", "minLength": 1 },
        "physics": { "enum": ["rapier", "ammo", "cannon", "none"] },
        "tickRate": { "type": "integer", "minimum": 30, "maximum": 240 },
        "assetBaseUrl": { "type": "string", "format": "uri" },
        "scripting": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "sandbox": { "enum": ["strict", "moderate", "off"], "default": "strict" }
          }
        }
      }
    },
    "rendering": {
      "type": "object",
      "additionalProperties": false,
      "required": ["colorSpace", "toneMapping", "shadows", "lod"],
      "properties": {
        "colorSpace": { "enum": ["srgb", "display-p3"] },
        "toneMapping": { "enum": ["ACESFilmic", "Neutral", "Linear"] },
        "exposure": { "type": "number", "minimum": 0.1, "maximum": 4.0, "default": 1.0 },
        "foveation": { "type": "number", "minimum": 0.0, "maximum": 1.0, "default": 0.5 },
        "shadows": {
          "type": "object",
          "additionalProperties": false,
          "required": ["enabled", "type", "mapSize"],
          "properties": {
            "enabled": { "type": "boolean" },
            "type": { "enum": ["PCFSoft", "VSM", "basic"] },
            "mapSize": { "type": "integer", "enum": [512, 1024, 2048, 4096] }
          }
        },
        "lod": {
          "type": "object",
          "additionalProperties": false,
          "required": ["enabled", "distances"],
          "properties": {
            "enabled": { "type": "boolean" },
            "distances": {
              "type": "array",
              "items": { "type": "number", "exclusiveMinimum": 0 },
              "minItems": 1
            }
          }
        }
      }
    },
    "xr": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "locomotion", "comfort"],
      "properties": {
        "mode": { "enum": ["immersive-vr", "inline", "immersive-ar"] },
        "refreshRate": { "type": "integer", "enum": [72, 80, 90, 120], "default": 90 },
        "handTracking": { "type": "boolean", "default": true },
        "locomotion": {
          "type": "object",
          "additionalProperties": false,
          "required": ["movement", "turning"],
          "properties": {
            "movement": { "enum": ["smooth", "teleport", "hybrid"] },
            "turning": { "enum": ["smooth", "snap"] },
            "snapAngle": { "type": "integer", "minimum": 15, "maximum": 90, "default": 30 }
          }
        },
        "comfort": {
          "type": "object",
          "additionalProperties": false,
          "required": ["vignette", "seatedMode"],
          "properties": {
            "vignette": { "type": "boolean", "default": true },
            "seatedMode": { "type": "boolean", "default": false },
            "heightOffsetMeters": { "type": "number", "minimum": -1.0, "maximum": 1.0, "default": 0.0 }
          }
        }
      }
    },
    "world": {
      "type": "object",
      "additionalProperties": false,
      "required": ["gravity", "scenes"],
      "properties": {
        "gravity": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 3,
          "maxItems": 3,
          "default": [0, -9.81, 0]
        },
        "spawnPoints": {
          "type": "array",
          "items": { "$ref": "#/$defs/transform" }
        },
        "scenes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name", "source"],
            "properties": {
              "id": { "type": "string", "pattern": "^[a-zA-Z0-9_-]+$" },
              "name": { "type": "string", "minLength": 1 },
              "source": { "type": "string", "pattern": "\\.(glb|gltf|json)$" },
              "streaming": { "type": "boolean", "default": false },
              "maxPlayers": { "type": "integer", "minimum": 1, "maximum": 1000, "default": 64 }
            }
          }
        }
      }
    },
    "network": {
      "type": "object",
      "additionalProperties": false,
      "required": ["transport", "region", "stateSyncHz"],
      "properties": {
        "transport": { "enum": ["websocket", "webrtc", "hybrid"] },
        "region": { "type": "string", "minLength": 2 },
        "stateSyncHz": { "type": "integer", "minimum": 1, "maximum": 120 },
        "interpolationMs": { "type": "integer", "minimum": 0, "maximum": 500, "default": 100 },
        "voiceChat": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "spatial": { "type": "boolean", "default": true },
            "codec": { "enum": ["opus", "pcm"] }
          }
        }
      }
    },
    "avatars": {
      "type": "object",
      "additionalProperties": false,
      "required": ["rig", "heightMeters", "ik"],
      "properties": {
        "rig": { "enum": ["humanoid", "fullbody", "custom"] },
        "heightMeters": { "type": "number", "minimum": 1.0, "maximum": 2.5 },
        "defaultModel": { "type": "string", "pattern": "\\.(glb|gltf)$" },
        "ik": {
          "type": "object",
          "additionalProperties": false,
          "required": ["enabled", "solver"],
          "properties": {
            "enabled": { "type": "boolean" },
            "solver": { "enum": ["ccd", "fabrik", "analytic"] },
            "footPlacement": { "type": "boolean", "default": false }
          }
        },
        "customization": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "allowUserSkins": { "type": "boolean", "default": true },
            "maxTextureSize": { "type": "integer", "enum": [512, 1024, 2048, 4096], "default": 2048 }
          }
        }
      }
    },
    "security": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "allowCustomScripts": { "type": "boolean", "default": false },
        "assetAllowList": {
          "type": "array",
          "items": { "type": "string", "format": "uri" },
          "uniqueItems": true
        },
        "antiCheat": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "serverAuthority": { "type": "boolean", "default": true },
            "movementValidation": { "type": "boolean", "default": true }
          }
        }
      }
    }
  },
  "$defs": {
    "vector3": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 3,
      "maxItems": 3
    },
    "quaternion": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 4,
      "maxItems": 4
    },
    "transform": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "position": { "$ref": "#/$defs/vector3" },
        "rotation": { "$ref": "#/$defs/quaternion" },
        "scale": { "$ref": "#/$defs/vector3" }
      }
    }
  }
}
